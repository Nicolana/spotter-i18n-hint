{
  "publisher": "kitiho",
  "name": "spotter-i18n-hint",
  "displayName": "spotter-i18n-hint",
  "version": "0.0.3",
  "private": true,
  "packageManager": "pnpm@7.8.0",
  "description": "Exclusive for Spotter. When hovering over the corresponding i18n key, the corresponding value will be displayed.",
  "author": "Kitiho <duanjipeng0328@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kitiho/spotter-i18n-hint",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitiho/spotter-i18n-hint.git"
  },
  "bugs": {
    "url": "https://github.com/kitiho/spotter-i18n-hint/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.69.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "spotter",
      "properties": {
        "spotter.disable": {
          "type": "boolean",
          "default": false,
          "description": "Disable the Spotter extension"
        },
        "spotter.i18nDtsFilePath": {
          "type": "string",
          "description": "The path to the @spotter/i18n-sdk/lib/trans/index.d.ts file"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@antfu/ni": "^0.17.2",
    "@babel/parser": "^7.21.3",
    "@types/node": "^18.6.4",
    "@types/vscode": "^1.69.0",
    "bumpp": "^8.2.1",
    "eslint": "^8.21.0",
    "esno": "^0.16.3",
    "pnpm": "^7.8.0",
    "rimraf": "^3.0.2",
    "tsup": "^6.2.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vitest": "^0.21.0",
    "vsce": "^2.10.0"
  }

}
